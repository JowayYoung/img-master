#!/usr/bin/env node

const chalk = require("chalk");
const commander = require("commander");

const packages = require("../package");
const utils = require("../utils");
const group = require("../lib/group");
const handle = require("../lib/handle");

// Version && Usage
commander
	.version(packages.version)
	.usage(chalk.yellowBright("<command> [option]"));

// Group
commander
	.command("group")
	.alias("g")
	.description(chalk.blueBright("Image Grouping"))
	.action(group);

// Handle
commander
	.command("handle")
	.alias("h")
	.description(chalk.blueBright("Image Handling"))
	.action(handle);

utils.help(commander);